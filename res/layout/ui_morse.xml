<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_morse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="120dp"
    android:orientation="vertical"
    android:visibility="gone" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please input Morse Characters（Only digits, characters and space are allowed）"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editext_morse_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SOS"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/morse_send"
        android:onClick="onClick_SendMorseCode" />

</LinearLayout>